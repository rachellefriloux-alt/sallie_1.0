<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- SallieButton Color Values -->
    <color name="sallie_primary">#6200EE</color>
    <color name="sallie_accent">#03DAC5</color>
    <color name="sallie_danger">#F44336</color>
    <color name="sallie_success">#4CAF50</color>
    
    <!-- SallieButton Style Attributes -->
    <declare-styleable name="SallieButton">
        <attr name="buttonType" format="enum">
            <enum name="primary" value="0" />
            <enum name="secondary" value="1" />
            <enum name="tertiary" value="2" />
            <enum name="danger" value="3" />
            <enum name="success" value="4" />
        </attr>
        <attr name="buttonSize" format="enum">
            <enum name="small" value="0" />
            <enum name="medium" value="1" />
            <enum name="large" value="2" />
        </attr>
        <attr name="text" format="string" />
    </declare-styleable>
</resources>
